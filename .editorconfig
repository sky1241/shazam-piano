# EditorConfig for ShazaPiano
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,pyi}]
indent_style = space
indent_size = 4
max_line_length = 100

[*.{dart}]
indent_style = space
indent_size = 2
max_line_length = 80

[*.{js,ts,json,yaml,yml}]
indent_style = space
indent_size = 2

[*.{sh,bash}]
indent_style = space
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = off

[Makefile]
indent_style = tab

[*.{gradle,gradle.kts}]
indent_style = space
indent_size = 4

[{package.json,*.yml,*.yaml}]
indent_style = space
indent_size = 2


